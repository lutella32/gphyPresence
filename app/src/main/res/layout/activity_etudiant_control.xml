<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".etudiantControl">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="@string/etudiant"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="84dp"
        android:layout_height="48dp"
        android:backgroundTint="#00BCD4"
        android:onClick="finishing"
        android:text="@string/exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDate9" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/derni_res_connexions"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txtDate0"
        app:layout_constraintTop_toBottomOf="@+id/txtDate0" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:minHeight="48dp"
        android:text="@string/connect"
        app:layout_constraintEnd_toStartOf="@+id/buttonCheckIn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/txtDate1"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:text="null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/txtDate7"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="null"
        app:layout_constraintStart_toStartOf="@+id/txtDate6"
        app:layout_constraintTop_toBottomOf="@+id/txtDate6" />

    <TextView
        android:id="@+id/txtDate9"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="null"
        app:layout_constraintStart_toStartOf="@+id/txtDate8"
        app:layout_constraintTop_toBottomOf="@+id/txtDate8" />

    <TextView
        android:id="@+id/txtDate8"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="null"
        app:layout_constraintStart_toStartOf="@+id/txtDate7"
        app:layout_constraintTop_toBottomOf="@+id/txtDate7" />

    <TextView
        android:id="@+id/txtDate0"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:text="@string/textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch1" />

    <TextView
        android:id="@+id/txtDate2"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="null"
        app:layout_constraintStart_toStartOf="@+id/txtDate1"
        app:layout_constraintTop_toBottomOf="@+id/txtDate1" />

    <TextView
        android:id="@+id/txtDate4"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="null"
        app:layout_constraintStart_toStartOf="@+id/txtDate3"
        app:layout_constraintTop_toBottomOf="@+id/txtDate3" />

    <TextView
        android:id="@+id/txtDate3"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="null"
        app:layout_constraintStart_toStartOf="@+id/txtDate2"
        app:layout_constraintTop_toBottomOf="@+id/txtDate2" />

    <TextView
        android:id="@+id/txtDate5"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="null"
        app:layout_constraintStart_toStartOf="@+id/txtDate4"
        app:layout_constraintTop_toBottomOf="@+id/txtDate4" />

    <TextView
        android:id="@+id/txtDate6"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="null"
        app:layout_constraintStart_toStartOf="@+id/txtDate5"
        app:layout_constraintTop_toBottomOf="@+id/txtDate5" />

    <Button
        android:id="@+id/buttonCheckIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#00BCD4"
        android:onClick="connexionBT"
        android:text="@string/valider_ma_pr_sence"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>